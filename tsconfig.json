{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "module": "node16",
    "baseUrl": ".",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist",
    "verbatimModuleSyntax": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts"]
}
