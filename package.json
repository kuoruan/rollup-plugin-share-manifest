{
  "name": "rollup-plugin-share-manifest",
  "version": "0.0.1",
  "description": "The Rollup plugin to share manifest between builds",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "types": "./types/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest run --watch",
    "test:coverage": "vitest run --coverage",
    "test:update": "vitest run --update",
    "build": "rollup -c",
    "lint": "biome check",
    "lint:fix": "biome check --write"
  },
  "keywords": [
    "rollup",
    "rollup-plugin",
    "manifest",
    "share-manifest"
  ],
  "files": [
    "dist",
    "types"
  ],
  "author": "Xingwang Liao <kuoruan@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuoruan/rollup-plugin-share-manifest.git"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.13.0",
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@rollup/plugin-image": "^3.0.3",
    "@rollup/plugin-typescript": "^12.1.4",
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^22.17.0",
    "@vitest/coverage-v8": "3.2.4",
    "memfs": "^4.24.0",
    "rollup": "^4.46.2",
    "rollup-plugin-node-externals": "^8.0.1",
    "typescript-transform-paths": "^3.5.5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.6.0"
  },
  "dependencies": {
    "tempy": "^3.1.0"
  }
}
